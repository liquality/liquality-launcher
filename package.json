{
  "name": "liquality-launcher",
  "version": "0.2.3",
  "description": "Run Liquality yourself from the comfort of your desktop",
  "main": "src/main.js",
  "scripts": {
    "start": "electron ./src/main.js",
    "lint": "standard",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl"
  },
  "build": {
    "appId": "liquality.launcher",
    "productName": "Liquality Launcher",
    "directories": {
      "buildResources": "assets"
    }
  },
  "repository": "https://github.com/liquality/liquality-launcher",
  "keywords": [
    "Liquality",
    "Liquality Launcher",
    "Atomic Swaps",
    "Bitcoin",
    "Ethereum"
  ],
  "author": "Liquality",
  "license": "MIT",
  "devDependencies": {
    "electron": "^13.6.6",
    "electron-builder": "^20.43.0",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "electron-store": "^3.3.0",
    "extract-zip": "^1.6.7",
    "http-server": "^0.9.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7"
  }
}
